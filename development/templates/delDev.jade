md-dialog(ng-controller='adminViewCtrl', aria-label="List dialog")
    md-toolbar
        div.md-toolbar-tools
            h2 Delete Device
    md-dialog-content
        md-list.md-dialog-content
            md-list-item(ng-repeat="installation in installations")
                p {{installation.device.location}}
                md-button.md-primary(ng-click="submit('delete')") Delete
                    md-icon delete

    md-dialog-actions
        span(flex)
        md-button.md-primary(ng-click="dismiss()") Cancel
            md-icon cancel
